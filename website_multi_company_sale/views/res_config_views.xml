<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_website_config_settings" model="ir.ui.view">
        <field name="name">Multi-Website settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='checkout_assignation_setting']" position="after">

                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="billing_countries_setting"
                >
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Billing</span>
                        <div class="content-group">
                            <div class="row">
                                <label
                                    class="o_light_label col-lg-3"
                                    for="website_billing_country_ids"
                                />
                                <field
                                    name="website_billing_country_ids"
                                    widget="many2many_tags"
                                />
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
